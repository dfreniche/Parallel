<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/map_bubble_background">
    <ImageView
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/tag_imageview"
        android:layout_gravity="center_vertical"
        android:paddingRight="6dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1" >
        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/tag_title_textview"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:maxEms="20"
            android:textColor="@android:color/white"
            android:text="title"/>

        <TextView
            android:id="@+id/tag_last_seen_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="20"
            android:text="last seen"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
             />

    </LinearLayout>
    <Button
        android:id="@+id/tag_disclsure_button"
        android:background="@drawable/expander_ic_minimized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center_vertical"/>
</LinearLayout>
